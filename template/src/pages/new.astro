<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Web App Layout</title>
  </head>
  <body class="h-full">
    <!-- Header -->
    <header class="fixed top-0 left-0 right-0 h-16 bg-blue-500 z-50">
      <div class="text-white p-4">Header</div>
    </header>
    <div class="h-16"></div>
    <!-- Spacer for header -->

    <!-- Left Navigation -->
    <nav
      class="fixed left-0 w-16 bg-purple-500 flex flex-col items-center py-4 space-y-6 z-40 h-screen"
    >
      <div class="w-8 h-8 rounded-full bg-white"></div>
      <div class="w-8 h-8 rounded-full bg-white"></div>
      <div class="w-8 h-8 rounded-full bg-white"></div>
      <div class="w-8 h-8 rounded-full bg-white"></div>
    </nav>

    <!-- Main Layout Container -->
    <div class="flex">
      <div class="w-16"></div>
      <!-- Spacer for nav -->

      <!-- Main Content Area -->
      <main class="flex-1 bg-green-500 min-h-screen relative">
        <!-- Tools Panel -->
        <div class="fixed top-16 left-16 bg-yellow-500 rounded-br-lg shadow-lg z-40">
          <div class="flex space-x-4 p-4">
            <div class="w-8 h-8 rounded-full bg-white"></div>
            <div class="w-8 h-8 rounded-full bg-white"></div>
            <div class="w-8 h-8 rounded-full bg-white"></div>
            <div class="w-8 h-8 rounded-full bg-white"></div>
          </div>
        </div>
        <!-- Main Content -->
        <div class="p-8">
          <div class="h-32 bg-green-400 mb-4 rounded"></div>
          <div class="h-32 bg-green-400 mb-4 rounded"></div>
          <div class="h-32 bg-green-400 mb-4 rounded"></div>
          <div class="h-32 bg-green-400 mb-4 rounded"></div>
          <div class="h-32 bg-green-400 mb-4 rounded"></div>
          <div class="h-32 bg-green-400 mb-4 rounded"></div>
          <div class="h-32 bg-green-400 mb-4 rounded"></div>
          <div class="h-32 bg-green-400 rounded"></div>
        </div>
      </main>
    </div>

    <!-- Edit Panel -->
    <div class="fixed bottom-0 right-0 bg-white shadow-lg" style="width: 500px;">
      <div class="overflow-y-auto" style="max-height: 50vh;">
        <div class="p-6">
          <h2 class="text-xl font-bold mb-4">Edit Panel</h2>
          <!-- Placeholder content to demonstrate scroll -->
          <div class="space-y-4">
            <div class="h-16 bg-gray-200 rounded"></div>
            <div class="h-16 bg-gray-200 rounded"></div>
            <div class="h-16 bg-gray-200 rounded"></div>
            <div class="h-16 bg-gray-200 rounded"></div>
            <div class="h-16 bg-gray-200 rounded"></div>
            <div class="h-16 bg-gray-200 rounded"></div>
            <div class="h-16 bg-gray-200 rounded"></div>
            <div class="h-16 bg-gray-200 rounded"></div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
