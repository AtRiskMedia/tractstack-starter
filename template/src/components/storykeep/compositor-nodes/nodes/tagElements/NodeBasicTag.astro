---
import { getChildNodeIDs, getNodeClasses } from "../../../../../store/nodes";
import { viewportStore } from "../../../../../store/storykeep.ts";
import Node from "../../../../storykeep/compositor-nodes/Node.astro";
import { allNodes } from "../../../../../store/nodes";
import type { FlatNode } from "../../../../../types";

const { nodeId } = Astro.props;
const node = allNodes.get().get(nodeId) as FlatNode;
const Tag = node.tagName;
---

<Tag class={getNodeClasses(nodeId, viewportStore.get().value)}>
  {getChildNodeIDs(nodeId).map((id) => <Node nodeId={id} />)}
</Tag>
